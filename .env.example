APP_NAME="Wedding SaaS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost

# Security hardening
IGNITION_ENABLE_RUNNABLE_SOLUTIONS=false
SECURITY_ENABLE_IGNITION_ROUTES=false
SECURITY_MONITORING_PUBLIC=false
SECURITY_MONITORING_TOKEN=
SECURITY_MONITORING_TOKEN_HEADER=X-Health-Token
SECURITY_MONITORING_ALLOWED_IPS=
SECURITY_HEADERS_ENABLED=true
SECURITY_X_FRAME_OPTIONS=SAMEORIGIN
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=()"
SECURITY_CSP=
SECURITY_HSTS_ENABLED=false
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=false

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=wedding_saas
DB_USERNAME=wedding
DB_PASSWORD=secret

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=wedding_

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@wedding.local"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# PagSeguro Configuration
PAGSEGURO_API_URL=https://sandbox.api.pagseguro.com
PAGSEGURO_TOKEN=
PAGSEGURO_WEBHOOK_SECRET=
PAGSEGURO_SANDBOX=true
